<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weekSelectorSwitchView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ca.antonious.materialdaypicker.MaterialDayPicker
        android:id="@+id/week_day_picker"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/week_schedule_valid_from_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/week_day_picker"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="19dp"
        android:onClick="showWeekScheduleStartDatePickerDialog"
        android:text="@string/week_schedule_valid_from_btn_text" />

    <Button
        android:id="@+id/week_schedule_valid_till_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/week_day_picker"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="66dp"
        android:layout_toEndOf="@+id/week_schedule_valid_from_btn"
        android:onClick="showWeekScheduleEndDatePickerDialog"
        android:text="@string/week_schedule_valid_till_btn_text" />

</RelativeLayout>
