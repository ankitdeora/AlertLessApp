<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SchedulerActivity">

    <RadioGroup
        android:id="@+id/scheduleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:checkedButton="@id/radio_week">

        <RadioButton
            android:id="@+id/radio_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:onClick="onWeekRadioSelection"
            android:text="By Week" />

        <RadioButton
            android:id="@+id/radio_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:onClick="onDateRadioSelection"
            android:text="By Date" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/scheduleSwitchLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/scheduleRadioGroup">

        <include
            layout="@layout/week_selector"
            android:layout_width="fill_parent"
            android:layout_height="157dp" />

    </LinearLayout>


    <Button
        android:id="@+id/start_time_btn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="72dp"
        android:onClick="showStartTimePickerDialog"
        android:text="@string/start_time_btn_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/end_time_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/end_time_btn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:onClick="showEndTimePickerDialog"
        android:text="@string/end_time_btn_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/start_time_btn"
        app:layout_constraintTop_toBottomOf="@+id/scheduleSwitchLayout" />

    <Button
        android:id="@+id/schedule_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:onClick="saveSchedule"
        android:text="save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_time_btn" />

    <Button
        android:id="@+id/scheduleShowbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="44dp"
        android:onClick="showTimeRange"
        android:text="show"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule_save_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>