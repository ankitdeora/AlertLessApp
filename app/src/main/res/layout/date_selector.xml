<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateSelectorSwitchView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/date_selector_radios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="26dp"
        android:checkedButton="@id/individual_selector_radio"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/individual_selector_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:onClick="onIndividualDatePickerRadioSelection"
            android:text="One By One" />

        <RadioButton
            android:id="@+id/range_selector_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:onClick="onRangeDatePickerRadioSelection"
            android:text="By Range" />
    </RadioGroup>

    <Button
        android:id="@+id/dateSelectorSwitchViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/date_selector_radios"
        android:onClick="showMultipleDatePicker"
        android:text="Select Dates" />
</RelativeLayout>
