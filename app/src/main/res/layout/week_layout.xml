<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weekSelectorSwitchView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical">

        <ca.antonious.materialdaypicker.MaterialDayPicker
            android:id="@+id/week_day_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/startDateWeekSch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="showWeekScheduleStartDatePickerDialog"
        android:text="Schedule Start Date"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/endDateWeekSch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="showWeekScheduleEndDatePickerDialog"
        android:text="Schedule End Date"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />



</LinearLayout>
