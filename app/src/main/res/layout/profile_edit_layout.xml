<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_profile_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_profile_icon_black_24dp" />

        <TextView
            android:id="@+id/profileTextView"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="Profile Name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/save_profile_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="editProfileName"
            app:srcCompat="@drawable/ic_edit_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="6"
        android:onClick="schedule"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/schedule_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_schedule_black_24dp" />

        <TextView
            android:id="@+id/scheduleTextView"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Schedule"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="toggleApps">

        <ImageView
            android:id="@+id/mute_apps_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_apps_black_24dp" />

        <TextView
            android:id="@+id/muteAppsTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Muted Apps"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/apps_arrow_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_down_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/silentOnlyAppRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            tools:listitem="@layout/silent_apps_recyclerview_item" />

    </LinearLayout>

    <TextView
        android:id="@+id/silentMoreAppsTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="#E91E63"
        android:gravity="center"
        android:layout_gravity="clip_vertical"
        android:onClick="silentMoreApps"
        android:text="Silent More Apps"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>